            //ViewData["Title"] = "Random Steam Game";
}

@model RandomGameViewModel

<div class="row" >
    <div class="col-12 col-md-5" id="main">
        <div class="" style="height: 190px; position: relative">
            You should play:<br />
            <span class="fs-2" id="gameName"></span><br />

            <div class="mt-2" style="position: absolute; bottom: 0px;" id="frmRandomGame">
                <button type="button" class="btn btn-primary" id="btnAgain" onclick="getGame(true, '@Url.Action("RandomGameData", new {SteamId = Model.SteamId})')">
                    Choose Again
                </button>
                <a href="" class="btn btn-success" id="steamUrl">Run game</a> <br />
            </div>
        </div>
    </div>
    <div class="col-12 col-md-7 my-5 my-md-0">
        <p class="fs-2" id="gameNameHeader"></p>
        <span id="gameDescription"></span>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const content = document.getElementById("content");
            getGame(false, '@Url.Action("RandomGameData", new {SteamId = Model.SteamId})');
        });
    </script>
}